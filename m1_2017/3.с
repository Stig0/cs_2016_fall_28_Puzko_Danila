#include <stdio.h>

int main()
{
	float x,y,a,b,c,d;
	printf("Vvedi x, y, a, b(cherez zapyatuyu bez i:)\n ");
	scanf("%f, %f, %f, %f", &x, &y, &a, &b);
	c = (x*x*a+x*a*a+x*b*b+a*y*y)/((x+a)*(x+a)+(y+b)*(y+b));
	d = (x*x*b+a*a*y+y*y*b+y*b*b)/((x+a)*(x+a)+(y+b)*(y+b));
	printf("(%.2f)+(%.2fi)", c, d);
	return 0;
}
